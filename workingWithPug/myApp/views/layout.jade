include /_mixins
include /_cart_mock.jade
include /_functions.jade

doctype html
html
  head
    title= title
    +stylesheet_link_tag('application')
    link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Fjalla+One" type="text/css")
  body
     main
      h1 Products
      #cart
        h3
          a(href="#") Cart
            span= cart_quantity()
        #items
          ul
            each cart_item in cart
              li #{cart_item.title} X #{cart_item.quantity}
                span $#{format(cart_item.price * cart_item.quantity)}
            li
              strong Total
              span $#{format(cart.reduce(total))}
          a(href="#") Checkout

      block content
    +javascript_include_tag('cart')
